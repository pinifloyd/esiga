<%= content_for :stylesheets do %>
  <%= stylesheet_link_tag 'authentication' %>
<% end %>

<%= form_for resource, as: resource_name, url: session_path(resource_name), html: { class: 'authentication' } do |f| %>
  <%= content_tag(:h2, t('authentication.please_sign_in')) %>

  <%= bootstrap_flash %>

  <%= f.email_field :email, autofocus: true, placeholder: t('authentication.login'), class: 'input-block-level' %>
  <%= f.password_field :password, placeholder: t('base.password'), class: 'input-block-level' %>

  <%= f.label :remember_me, class: 'checkbox' do %>
    <%= f.check_box :remember_me %> <%= t('authentication.remember_me') %>
  <% end %>
  <%= link_to t('authentication.forgot_your_password'), new_password_path(resource_name), class: 'pull-right' %>

  <%= f.submit t('authentication.sign_in'), class: 'btn btn-block btn-success' %>
  <%= link_to t('base.cancel'), '#', class: 'btn btn-block' %>
<% end %>

