<%= content_for :stylesheets do %>
  <%= stylesheet_link_tag 'authentication' %>
<% end %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'authentication', method: :post }) do |f| %>
  <%= content_tag(:h2, t('authentication.forgot_your_password')) %>

  <%= devise_error_messages! %>

  <%= f.email_field :email, autofocus: true, placeholder: t('authentication.login'), class: 'input-block-level' %>

  <%= f.submit t('authentication.reset_password_instructions'), class: 'btn btn-block btn-success' %>
<% end %>
