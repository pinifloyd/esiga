<div class='row'>
  <div class='span12'>
    <div class='page-header'>
      <h1><%= t('.page_header') %></h1>
    </div>

    <%= form_for @category, url: admin_category_path(@category), html: { class: 'form-horizontal' } do |f| %>
      <div class='control-group'>
        <%= f.label :name, class: 'control-label' do %>
          <%= t('.name_html', required: content_tag(:span, '*', class: 'label')) %>
        <% end %>
        <div class='controls'>
          <%= f.text_field :name %>
        </div>
      </div>

      <div class='form-actions'>
        <%= f.submit t('.submit'), class: 'btn btn-success' %>
        <%= link_to t('.cancel'), admin_categories_path, class: 'btn' %>
    <% end %>
  </div>
</div>
