<table class='table table-striped'>
  <thead>
    <tr>
      <th><%= t('.name') %></th>
      <th><%= t('.actions') %></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>
          <%= link_to t('.edit'), edit_admin_category_path(category), class: 'btn btn-small btn-warning' %>
          <%= link_to t('.delete'), admin_category_path(category), method: :delete, class: 'btn btn-small btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
