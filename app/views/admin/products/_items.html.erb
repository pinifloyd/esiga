<% scope = [ :admin, :products, :base ] %>

<table class='table table-striped'>
  <thead>
    <tr>
      <th><%= t(:name, scope: scope) %></th>
      <th><%= t(:price, scope: scope) %></th>
      <th><%= t(:category, scope: scope) %></th>
      <th class='actions'>
        <%= t('admin.base.actions') %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= currency_price(product.price) %></td>
        <td><%= product.category_name %></td>
        <td class='actions'>
          <%= edit_button(edit_admin_product_path(product)) %>
          <%= delete_button(admin_product_path(product)) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
