<%= content_for :stylesheets do %>
  <%= stylesheet_link_tag 'sign_in' %>
<% end %>

<%= form_for resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-sign-in' } do |f| %>
  <h2 class='form-sign-in-heading'><%= t('sign_in.please_sign_in') %></h2>

  <%= bootstrap_flash %>

  <%= f.email_field :email, autofocus: true, placeholder: t('base.login'), class: 'input-block-level' %>
  <%= f.password_field :password, placeholder: t('base.password'), class: 'input-block-level' %>

  <%= f.label :remember_me, class: 'checkbox' do %>
    <%= f.check_box :remember_me %> <%= t('sign_in.remember_me') %>
  <% end %>
  <%= link_to t('sign_in.forgot_your_password'), new_password_path(resource_name), class: 'pull-right' %>

  <%= f.submit t('sign_in.sign_in'), class: 'btn btn-block btn-success' %>
  <%= link_to t('base.cancel'), '#', class: 'btn btn-block' %>
<% end %>

